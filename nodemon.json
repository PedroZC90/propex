{
    "verbose": true,
    "watch": [
        "./src"
    ],
    "ext": "ts, env",
    "ignore": [
        "node_modules/**/*",
        "dist/*",
        "docs/*"
    ],
    "delay": "300",
    "env": {
        "NODE_ENV": "development",
        "NODE_CONFIG_DIR": "./config"
    },
    "execMap": {
        "ts": "node --inspect -r ts-node/register"
    }
}
